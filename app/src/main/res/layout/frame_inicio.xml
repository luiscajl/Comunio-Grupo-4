<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass"
    >


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="115dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NOTICIAS"
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"

        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:layout_height="100sp"
        android:layout_width="300sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Neymar: El tridente del Barcelona merece copar el Balón de Oro"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:background="@drawable/corner"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />
    <TextView
        android:layout_height="100sp"
        android:layout_width="300sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="James sigue desconectado. Repartió sólo 15 pases en campo contrario con un 60% de acierto"
        android:id="@+id/textView9"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/corner"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />
    <TextView
        android:layout_height="100sp"
        android:layout_width="160dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pepe: Estamos con el entrenador y con el presidente"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/corner"

        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"

        android:background="@drawable/neymar"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />


    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:background="@drawable/james"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />





    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:background="@drawable/pollo"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />


</RelativeLayout>